<Window x:Class="ClassRegisterApp.UI.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Đăng ký môn HUFLIT" 
        Height="650"
        Width="1000"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="RichTextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Đăng ký môn học HUFLIT" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Class List and Status -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Danh sách lớp cần đăng ký" 
                               FontSize="16" 
                               FontWeight="SemiBold"/>

                    <RichTextBox
                        Name="RtbClassList" 
                                 Height="200">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </StackPanel>

                <StackPanel Grid.Row="2">
                    <TextBlock
                        Text="Trạng thái đăng ký" 
                               FontSize="16" 
                               Height="20"
                               FontWeight="SemiBold" 
                               Margin="0,10,0,0"/>

                    <ListBox
                        Name="ListBoxState" 
                             Height="200" 
                             Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Right Panel - Authentication -->
            <StackPanel Grid.Column="1" 
                        Width="300" 
                        Margin="40,0,0,0">
                
                <TextBlock Text="Xác thực" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <TextBox Name="TbCookie" 
                         Height="40" 
                         VerticalContentAlignment="Center" 
                         FontSize="14"
                         Margin="0,0,0,15">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,15">
                    <RadioButton Content="Cookie" 
                                IsChecked="True" 
                                Margin="0,0,20,0"
                                Checked="PortalCookie_OnChecked"/>
                    <RadioButton Content="Tài khoản" 
                                Checked="PW_OnChecked"/>
                </StackPanel>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Button Name="CheckLoginBtn" 
                            Grid.Row="0"
                            Content="Kiểm tra đăng nhập" 
                            Click="BtnCheckLogin_OnClick"
                            Margin="0,0,0,15"/>

                    <Button Grid.Row="1"
                            Content="Đặt lại đăng nhập" 
                            Click="ResetButton_OnClick"
                            Margin="0,0,0,25"/>

                    <Button Grid.Row="2"
                            Name="BtnRun" 
                            Content="Bắt đầu đăng ký" 
                            Click="BtnRun_OnClick"
                            FontWeight="Bold"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>